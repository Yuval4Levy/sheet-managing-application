<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="RangeController.RangeController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox fx:id="rangeVBox" spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label fx:id="rangesLabel" text="Ranges" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        <ComboBox fx:id="rangeComboBox" prefWidth="200"/>
        <Button text="Delete Selected Range" onAction="#deleteSelectedRange" fx:id="deleteRangeButton"/>
        <Button text="Add Range" onAction="#showAddRangeDialog" fx:id="addRangeButton"/>
    </VBox>
</AnchorPane>
